<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="VATrainer.Views.ContentsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    xmlns:resx="clr-namespace:VATrainer.Resx"
    Title="{x:Static resx:AppResources.Title_Contents}"
    prism:ViewModelLocator.AutowireViewModel="True">

    <ContentPage.Content>
        <StackLayout Padding="20" BackgroundColor="Green">
            <WebView
                BackgroundColor="Red"
                HeightRequest="500"
                Source="{Binding Content, Mode=OneWay}" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>