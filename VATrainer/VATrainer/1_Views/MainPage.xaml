<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage
    x:Class="VATrainer.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resx="clr-namespace:VATrainer.Resx"
    x:Name="page"
    Title="{x:Static resx:AppResources.Title_HomeMaster}">

    <MasterDetailPage.Master>
        <ContentPage
            Title="Menu"
            Padding="{OnPlatform Default='20',
                                 iOS='20,40'}"
            IconImageSource="{OnPlatform iOS='hamburger.png'}">
            <StackLayout>
                <Label
                    Margin="0,20"
                    FontAttributes="Bold"
                    FontSize="Large"
                    Text="Master Detail Demo" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="HomePage"
                    Text="Home Page" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="ResourcePage"
                    Text="Resource Page" />
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="SettingPage"
                    Text="Setting Page" />
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

</MasterDetailPage>
